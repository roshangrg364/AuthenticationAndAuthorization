@model AuthenticationAndAuthorization.Areas.User.ViewModel.AddPasswordViewModel
@{
}
<div class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="card  card-tasks">
                <div class="card-header ">
                    <h5 class="card-category">Change Password</h5>
                </div>
                <div class="card-body ">
                    @Html.ValidationSummary()
                    <form method="post" enctype="multipart/form-data" asp-area="User" asp-controller="ChangePassword" asp-action="AddPassword">
                        <p>No password set yet for this user.. please set up the  password</p>

                        <div class="form-group">
                            <label class="required">New Password</label>
                            <input asp-for="NewPassword " class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="required">Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class=" btn btn-primary">Change Password</button>
                    </form>
                </div>
                <div class="card-footer ">

                </div>
            </div>
        </div>
    </div>
</div>