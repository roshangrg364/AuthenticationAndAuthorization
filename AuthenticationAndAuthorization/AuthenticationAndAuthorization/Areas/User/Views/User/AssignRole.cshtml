@model AuthenticationAndAuthorization.Areas.User.ViewModel.AssignRoleViewModel
@{

}
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card  card-tasks">
                <div class="card-header ">
                    <h5 class="card-category">Assign Role</h5>

                </div>

                <div class="card-body ">
                    <div class="col-md-12">
                        <form asp-action="AssignRole" method="post">
                            <input hidden asp-for="UserId" />
                            <div class="form-group">
                                User : @Model.UserName
                                <input asp-for="UserName" class="form-check" hidden />
                            </div>
                            @for (var i = 0; i < Model.Roles.Count; i++)
                            {
                                <div>
                                    <div class=" form-group">
                                        <input asp-for="@Model.Roles[i].RoleId" hidden />
                                        <input asp-for="@Model.Roles[i].IsSelected" readonly />
                                        <input asp-for="@Model.Roles[i].RoleName" readonly />
                                    </div>
                                </div>
                            }
                            <button type="submit" class="btn btn-primary">Save</button>
                        </form>

                    </div>
                </div>
                <div class="card-footer ">

                </div>
            </div>
        </div>
    </div>
</div>