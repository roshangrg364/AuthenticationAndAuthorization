@model InventorySystemMysql.Models.ResetPasswordViewModel
@{
}
<div class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="card  card-tasks">
                <div class="card-header ">
                    <h5 class="card-category">Reset Password</h5>
                </div>
                <div class="card-body ">
                    <form method="post" enctype="multipart/form-data" asp-area="" asp-controller="Account" asp-action="ResetPassword">
                        <input asp-for="Token" class="form-control" hidden/>
                        <input asp-for="Email" class="form-control" hidden/>
                        <div class="form-group">
                            <label class="required">Password</label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="required">Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class=" btn btn-primary">Confirm</button>
                    </form>
                </div>
                <div class="card-footer ">

                </div>
            </div>
        </div>
    </div>
</div>