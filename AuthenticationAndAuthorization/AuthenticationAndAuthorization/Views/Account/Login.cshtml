@model AuthenticationAndAuthorization.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Authentication & Authorization</title>
    <link rel="stylesheet" href="~/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/vendors/typicons/typicons.css">
    <link rel="stylesheet" href="~/vendors/simple-line-icons/css/simple-line-icons.css">
    <link rel="stylesheet" href="~/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/css/vertical-layout-light/style.css">
    <link rel="shortcut icon" href="~/images/favicon.png"/>
</head>

<body>
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="brand-logo">
                          @*  <img src="~/images/logo.svg" alt="logo">
                      *@  </div>
                        @Html.ValidationSummary()
                        <h4>Hello! let's get started</h4>
                        <h6 class="fw-light">Sign in to continue.</h6>
                        <form class="pt-3" asp-controller="Account" asp-action="LogIn" method="post">
                            <div class="form-group">
                                <input type="text" asp-for="UserName" class="form-control form-control-lg" placeholder="User Name">
                                <span asp-validation-for="UserName" class=" text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="password" asp-for="Password" class="form-control form-control-lg">
                                <span asp-validation-for="Password" class=" text-danger"></span>
                            </div>
                            <div class="mt-3">
                                <input type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" value="SIGN IN">
                            </div>
                            <div class="my-2 d-flex justify-content-between align-items-center">
                                <div class="form-check">
                                    <label class="form-check-label text-muted">
                                        <input type="checkbox" asp-for="RememberMe" class="form-check-input">
                                        Keep me signed in
                                    </label>
                                </div>

                                <a asp-area="" asp-controller="Account" asp-action="ForgotPassword" class="auth-link text-black">Forgot password?</a>
                            </div>
                            </form>
                            <div class="mb-2">
                                <h4>Also Login With</h4>
                                <form method="post" asp-action="ExternalLogin" asp-route-ReturnUrl="@Model.ReturnUrl">
                                    @if (Model.ExternalProviders.Any())
                                    {
                                        foreach (var provider in Model.ExternalProviders)
                                        {
                                            <div class="form-group">
                                                <button type="submit" value="@provider.Name" class="btn btn-secondary" title="Login with @provider.DisplayName" name="provider">@provider.Name</button>
                                            </div>
                                        }
                                    }
                                </form>
                            </div>
                            <div class="text-center mt-4 fw-light">
                              Don't have an account? <a asp-area="" asp-controller="UserRegistration" asp-action="Register" class="text-primary">Create</a> 
                            </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/vendors/js/vendor.bundle.base.js"></script>
<script src="~/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
<script src="~/js/off-canvas.js"></script>
<script src="~/js/hoverable-collapse.js"></script>
<script src="~/js/template.js"></script>
<script src="~/js/settings.js"></script>
<script src="~/js/todolist.js"></script>
</body>

</html>

@* <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script> *@
<script src="~/lib/jquery-validation/dist/jquery.validate.js" asp-append-version="true"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" asp-append-version="true"></script>
@* <script src="~/assets/js/core/popper.min.js" asp-append-version="true"></script> *@
@* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script> *@
@await Component.InvokeAsync("NToastNotify")

<style>
    #login .container #login-row #login-column #login-box {
        margin-top: 100px;
        max-width: 600px;
        height: 350px;
        border: 1px solid #9C9C9C;
        box-shadow: 1px 1px 1px 1px gray;
        background-color: #EAEAEA;
    }

        #login .container #login-row #login-column #login-box #login-form {
            padding: 5px;
        }

            #login .container #login-row #login-column #login-box #login-form #register-link {
                margin-top: -85px;
            }
</style>